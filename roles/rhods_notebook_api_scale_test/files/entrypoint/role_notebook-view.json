{
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "Role",
    "metadata": {
        "name": "jupyter-nb-{user_name}-notebook-view",
        "namespace": "rhods-notebooks"
    },
    "rules": [
        {
            "apiGroups": [
                "kubeflow.org"
            ],
            "resourceNames": [
                "jupyter-nb-{user_name}"
            ],
            "resources": [
                "notebooks"
            ],
            "verbs": [
                "get"
            ]
        }
    ]
}
