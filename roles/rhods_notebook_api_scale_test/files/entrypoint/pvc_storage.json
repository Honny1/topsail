{
  "apiVersion": "v1",
  "kind": "PersistentVolumeClaim",
  "metadata": {
    "name": "jupyterhub-nb-{user_name}-pvc",
    "namespace": "rhods-notebooks"
  },
  "spec": {
    "accessModes": [
      "ReadWriteOnce"
    ],
    "resources": {
      "requests": {
        "storage": "5Gi"
      }
    },
    "volumeMode": "Filesystem"
  }
}
